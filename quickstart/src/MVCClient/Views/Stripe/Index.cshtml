@using Microsoft.Extensions.Options
@inject IOptions<MVCClient.Data.StripeSettings> Stripe
@model Orders
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Payment methods
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">
            <form asp-controller="Stripe" asp-action="PayWithCard" method="POST">
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Total</th>
                                <th>Shipping fee</th>
                                <th>Sum total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.OrderTotal Đ</td>
                                <td>25000 Đ</td>
                                <td>@(Model.OrderTotal + 25000)  Đ</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">
                                    <a asp-controller="Stripe" asp-action="COD" class="btn btn-primary">Ship COD</a>
                                    <input hidden asp-for="CreateDate" />
                                    <input hidden asp-for="FirstName" />
                                    <input hidden asp-for="LastName" />
                                    <input hidden asp-for="Email" />
                                    <input hidden asp-for="Address" />
                                    <input hidden asp-for="OrderTotal" />
                                    <script src="//checkout.stripe.com/v2/checkout.js"
                                            class="stripe-button"
                                            data-key="@Stripe.Value.PublishableKey"
                                            data-locale="auto">
                                    </script>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </form>

        </div>
    </div>
</div>
    