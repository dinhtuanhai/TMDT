@model Data.Models.Bakery
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Detail
                </h1>
            </div>
        </div>
    </div>
</section>
<section class="menu-list-area section-gap">
    <div class="container card">
        <div class="section-top-border">
            <div class="row">
                <div class="preview col-md-6">
                    <img class="img-fluid" src="~/img/c1.jpg" alt="">
				</div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.Name</h3>
                    <p class="product-description">@Model.Describe</p>
                    <h4 class="price mb-10">Amount: <input type="number" class="w-25" /></h4>
                    <h4 class="price">Price: <b>@Model.Price Đ</b></h4>
                    <hr />
                    <div class="mt-30">
                        <button class="genric-btn primary" type="button">Add to cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>