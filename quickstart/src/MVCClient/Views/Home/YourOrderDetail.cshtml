@model IEnumerable<OrderDetail>
@{
    ViewData["Title"] = "YourOrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Order detail
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">
            <div class="row">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Bakery</th>
                            <th>Amount</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdbakeryNavigation.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.IdbakeryNavigation.Price</td>
                                <td>@((item.Quantity * item.IdbakeryNavigation.Price).ToString())</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col text-right">
                    <a class="genric-btn warning" asp-controller="Home" asp-action="YourOrders" asp-route-id="@User.FindFirstValue("sub")">BACK</a>
                </div>
            </div>
        </div>
    </div>
</div>



